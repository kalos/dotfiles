[[battery.display]]
threshold = 30
style = "bold yellow"

[[battery.display]]
threshold = 10
style = "bold red"

[cmd_duration]
min_time = 2_000
style = "#8871d9"
format = " took [$duration](italic $style) "
show_notifications = false
min_time_to_notify = 60_000

[directory]
truncation_length = 4
truncation_symbol = ".../"
truncate_to_repo = false
style = "#8871d9"

[directory.substitutions]
"/home/kalos/projects/" = "proj"
"/home/kalos/cloud/" = "cloud"

[hostname]
ssh_only = false
format = " [${hostname}]($style) "
style = "bold italic #653ef8"

format = "$symbol [${ram}( | ${swap})]($style) "
threshold = 80
style = "bold dimmed white"
disabled = false

[status]
map_symbol = true
disabled = false

[username]
style_user = "white bold"
style_root = "red bold"
format = "[$user]($style) "
disabled = false
show_always = true

[aws]
disabled = true





